<?jelly escape-by-default='true'?>
<!-- Section header -->
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-block">
                <h5 class="card-title collapsed" data-toggle="collapse" role="tab"
                    id="headingSummary" data-parent="#accordion" href="#warningsSummary">
                    ${%Summary}
                </h5>

                <div style="display: none">
                    <j:forEach var="priority" items="${it.priorities}">
                        <div id="${priority.name()}">
                            <j:if test="${it.getNumberOfAnnotations(priority) == 0}">
                                0
                            </j:if>
                            <j:if test="${it.getNumberOfAnnotations(priority) != 0}">
                                <span id="${priority}">${it.getNumberOfAnnotations(priority)}</span>
                            </j:if>
                        </div>
                    </j:forEach>
                </div>
                <div id="warningsSummary" class="graph-size collapse hide" role="tabpanel"
                     aria-labelledby="headingSummary">
                    <canvas id="doughnut-priorities-summary" class="graph-cursor-pointer" width="100" height="100"/>
                </div>
